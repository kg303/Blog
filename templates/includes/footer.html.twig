<!-- FOOTER -->
<footer class="container d-flex flex-wrap justify-content-between align-items-center py-3 my-5 border-top mt-auto">
    <div class="col-md-4 d-flex align-items-center">
        <span class="text-muted">{{ pimcore_input('copyright') }}</span>
    </div>

    <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
        {% for i in pimcore_block('socials').iterator %}
            {% if editmode %}
                {{ pimcore_link('socialUrl') }}
            {% else %}
                {% set socialUrl = pimcore_link('socialUrl') %}
                <li style="margin-right: 10px;">
                    <a class="text-muted" href="{{ socialUrl.getHref() }}" class="{{ socialUrl.getclass() }}">
                        {{ socialUrl.getText() | raw }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
</footer>

<!-- FOOTER END -->